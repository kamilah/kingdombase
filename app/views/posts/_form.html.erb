<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, class: 'form-control', label: false, autofocus: true, placeholder: 'Title' %> <br>
    <%= f.input :content,  class: 'form-control', label: false, autofocus: true, placeholder: 'Content' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
